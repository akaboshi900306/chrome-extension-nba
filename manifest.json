{
    "manifest_version": 2,

    "name": "NBA BOX SCORE",
    "description": "This extension shows you the box score of NBA games.",
    "version": "1.0",

    "icons": {
        "16": "/src/assets/png/icon-color-16.png",
        "48": "/src/assets/png/icon-color-48.png",
        "128": "/src/assets/png/icon-color-128.png"
    },


    "browser_action": {
        "default_popup": "/src/js/popup/popup.html"
    },

    "background": {
        "scripts": [
            "/src/thirdparty/jquery-3.1.1.min.js",
            "/src/common_utility/common_utility.json",
            "/src/background/background.js"
        ],
        "persistent": false
    },

    "permissions": [
        "storage",
        "alarms",
        "http://data.nba.com/"
    ]
}