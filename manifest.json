{
    "manifest_version": 2,

    "name": "NBA BOX SCORE",
    "description": "This extension shows you the box score of NBA games.",
    "version": "1.0",


    "browser_action": {
        "default_icon": "/src/assets/icon.png",
        "default_popup": "/src/frontend/popup/popup.html"
    },

    "background": {
        "scripts": [
            "/src/thirdparty/jquery-3.1.1.min.js",
            "/src/background/background.js"
        ]
    },

    "permissions": [
        "storage",
        "geolocation",
        "http://data.nba.com/"
    ]
}